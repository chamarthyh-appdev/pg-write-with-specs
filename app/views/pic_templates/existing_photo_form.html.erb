<h1>Update photo #<%=params.fetch("photo_id")%></h1>

<form action="/update_photo_record/<%=@picture.id%>">
    <label for="url_box">Image URL</label>
    <input id = "url_box" type = "text" name= "pic_image_url" value="<%=@picture.image%>">
    
    <label for = "caption_box">Caption</label>
    <textarea id = "caption_box" name="pic_caption"><%=@picture.caption%></textarea>
    
     <button>Update photo</button>
    
</form>